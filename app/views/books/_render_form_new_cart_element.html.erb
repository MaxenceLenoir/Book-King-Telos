<% if @book.available? %>
  <%= simple_form_for @cart_element, method: :post, url: cart_elements_path, remote: true do |f| %>
  <%= hidden_field_tag 'book_id', @book.id %>
    <%= button_tag type: "submit", class: "btn-orange-ext", id: "button-add-cart" do %>
      Add to cart <i class="fas fa-shopping-cart"></i>
    <% end %>
  <% end %>
<% else %>
  <div class="text-center">We are sorry but this book is no longer available..</div>
<% end %>