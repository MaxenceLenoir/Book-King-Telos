
<div class="scene">
  <div class="book-wrap" id="show-card-book-<%=@book.id%>">
    <div class="left-side">
      <div class="book-cover-left"></div>
      <div class="layer1">
        <div class="page-left"></div>
      </div>
      <div class="layer2">
        <div class="page-left"></div>
      </div>
      <div class="layer3">
        <div class="page-left"></div>
      </div>
      <div class="layer4">
        <div class="page-left"></div>
      </div>
      <div class="layer-text">
        <div class="page-left-2">
          <div class="corner"></div>
          <div class="corner2"></div>
          <div class="corner-fold"></div>
          <div class="page-text w-richtext">
            <h2><strong><%= @book.title %></strong></h2>
            <h4>BYÂ <%= @book.author.upcase %></h4>
            <div class="f-flex">
              <p><%= @book.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="center"></div>
    <div class="right-side">
      <div class="book-cover-right"></div>
      <div class="layer1">
        <div class="page-right"></div>
      </div>
      <div class="layer2 right">
        <div class="page-right"></div>
      </div>
      <div class="layer3 right">
        <div class="page-right"></div>
      </div>
      <div class="layer4 right">
        <div class="page-right"></div>
      </div>
      <div class="layer-text right">
        <div class="page-right-2">
          <div class="actions">
            <% if policy(@book).update?  %>
              <%= link_to edit_book_path(@book), class: "mr-1" do %>
              <i class="fas fa-edit"></i>
              <% end %>
            <% end %>
            <% if policy(@book).destroy?  %>
              <%= link_to book_path(@book), method: :delete do %>
                <i class="fas fa-trash"></i>
              <% end %>
            <% end %>
          </div>
          <div class="d-flex flex-column justify-content-between h-100">
            <div class="page-text w-richtext">
              <h2><strong>Sold By</strong></h2>
              <h4><%= @book.seller.name.upcase %></h4>
              <h5><%= @book.created_at.strftime("published on %m/%d/%Y") %></h5>
              <h6><%= @book.created_at.strftime("at %I:%M%p") %></h6>
            </div>
            <% if current_buyer %>
              <div class="d-flex justify-content-center button" id="book-availability">
                  <%= render "render_form_new_cart_element" %>
              </div>
            <% end %>
            <div class="price-page d-flex ml-auto">
              <%= humanized_money_with_symbol(@book.price) %>
              <i class="ml-2 fas fa-barcode"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>