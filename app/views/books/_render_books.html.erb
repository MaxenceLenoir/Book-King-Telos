<% @books.each do |book| %>
  <% if book.available? %>
    <%= link_to book_path(book), id: "card-book-#{book.id}" do %>
      <div class="card-book">
        <div class="cover">
          <div class="title px-2"><%= book.title %></div>
          <div class="footer">
            <div class="author"><%= book.author %></div>
            <div class="ml-2 price"><%= humanized_money_with_symbol(book.price) %> </div> 
          </div>
        </div>
        <div class="page"></div>
        <div class="page page-2"></div>
        <div class="page page-3"></div>
        <div class="page page-4"></div>
        <div class="cover final-page">
          <div class="text"></div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>