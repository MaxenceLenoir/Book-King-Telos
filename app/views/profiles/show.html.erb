<h1 class="text-center">My Book-King identity</h1>
<div class="row">
  <div class="offset-lg-3 col-lg-6">
    <div class="card-identity">
      <%= image_tag "avatar.png", class: "avatar-large" %>
      <div class="row w-100">
        <div class="col-lg-6">
          <div class="element"><i class="fas fa-money-bill-wave mr-3"></i><%= humanized_money_with_symbol(current_buyer.account_money) %></div>
          <div class="element"><i class="fas fa-envelope-open-text mr-3"></i><%= current_buyer.email %></div>
          <div class="element"><i class="fas fa-book-open mr-3"></i><%= current_buyer.cart_elements_paid.count %></div>
        </div>
        <div class="col-lg-6">
          <div class="element"><i class="fas fa-signature mr-3"></i><%= current_buyer.name %></div>
          <div class="element"><i class="fas fa-home mr-3"></i><%= current_buyer.address %></div>
          <div class="element"><i class="fas fa-shopping-cart mr-3"></i><%= current_buyer.notifs_counter %></div>
        </div>
      </div>
      <div class="footer my-1 py-1">Member since <%= current_buyer.created_at.strftime("%m/%d/%Y") %></div>
    </div>
  </div>
</div>